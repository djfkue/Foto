<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cover.CoverActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back_cover"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <com.argon.foto.widget.FotoTextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="70sp"
            android:text="@string/app_logo"
            foo:customFont="NotoSansHans.otf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">
            <com.argon.foto.widget.FotoTextView
                android:id="@+id/sign_up_weibo_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/sign_up_with_weibo"
                android:textAppearance="@android:style/TextAppearance.Holo.Small"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_blue"/>


            <com.argon.foto.widget.FotoTextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/create_account"
                android:textAppearance="@android:style/TextAppearance.Holo.Small"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/bg_button_normal"/>

            <com.argon.foto.widget.FotoTextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/sign_in_with_email"
                android:textAppearance="@android:style/TextAppearance.Holo.Small"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
