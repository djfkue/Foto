<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Application theme. -->
    <style name="CoverTheme" parent="AppTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@android:style/Theme.Holo.NoActionBar</item>
    </style>

    <style name="FotoListTheme" parent="AppTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/FotoListActionBar</item>
    </style>

    <style name="FotoListActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_foto_list_bg</item>"
    </style>

    <style name="FotoDetailTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/FotoDetailActionBar</item>
    </style>

    <style name="FotoDetailActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/foto_list_item_header_bg</item>"
    </style>

    <style name="ActionBarStyle.Transparent.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TransprentGradientActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
        <item name="android:displayOptions">useLogo</item>
    </style>

    <style name="PhotographerHomeTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/TransprentGradientActionBar</item>
    </style>

</resources>
